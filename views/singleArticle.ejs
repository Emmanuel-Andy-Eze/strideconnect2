<!-- Main Article -->
  <div class="main dark:text-white" style="padding: 1rem 1rem 5rem 1rem;">
    <h1 class="article-title" style="font-size: 1.3rem;"><%= article.title %> </h1>
    <div class="article-details" style="display: flex; justify-content: space-between;">
        <div class="author dark:text-white" style="display: flex; align-items: center; text-align: left; padding: .5rem 0 .5rem .5rem;">
          <a href="/users/<%= article.user._id %>" style="display: flex; align-items: center;">
            <img src="<%= article.user.image %>" alt="" style="width: 40px; height: 40px; border-radius: 50%; margin-right: .5rem;">
            <div class="time-name" style="display: flex; flex-direction: column;">
              <span style="font-size: .7rem;"><%= article.user.displayName %> </span>
              <span style="font-size: .5rem;"><%= article.createdAt.toLocaleDateString('en-GB') %></span>
            </div>
          </a>
        </div>
        <% if (user) { %>
          <% if (user.image === article.user.image) { %>
            <form action="/articles/<%= article._id %>?_method=DELETE" method="post">
              <button type="submit" class="py-2 px-3 text-xs font-small text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">Delete</button>
            </form>
          <%} else { %>
            <form action="/users/<%= article.user._id %>/<%- (article.user.followers.includes(user.id)) ? 'unfollow' : 'follow' %>" method="post">
              <input type="text" name="userId" value="<%= user.id %>" hidden>
              <button type="submit" class="py-2 px-3 text-xs font-small text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-900"><%- (article.user.followers.includes(user.id)) ? 'Unfollow' : 'Follow' %></button>
            </form>
          <% } %>
        <%} else { %>
        
        <% } %>
    </div>
    <hr class="dark:text-white">

    <div class="article-body" style="padding-top: .5rem;">
        <div> 
          <span><pre><%= articleBody %></pre></span>
        </div>
    </div>
  </div>


  <nav style="position: fixed; bottom: 0; width: 100%; margin: 0 auto; background-color: #1D2226; border-top: 1px solid gray;" class="footer-nav bg-white border-gray-200 py-2.5">
