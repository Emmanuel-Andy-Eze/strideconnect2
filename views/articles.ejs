<!-- Cards -->
<div class="cards" style="margin: .6rem 0 4rem 0;">
  <% if (sortedTimelineArticles.length >= 1) { %>
  <% sortedTimelineArticles.forEach(function(timelineArticle){ %>
          <a href="/articles/<%= timelineArticle.slug %> " style="margin-bottom: 1rem; background-color: #1D2226; border: none; border-bottom: 1px solid gray; padding-bottom: .5rem;" class="flex flex-col bg-white border shadow-md md:flex-row md:max-w-sm hover:bg-gray-100 dark:hover:bg-gray-800">
          <!-- <img class="object-cover w-full h-96 rounded-t-lg md:h-48 md:w-48 md:rounded-none md:rounded-l-sm" src="https://flowbite.com/docs/images/blog/image-4.jpg" alt=""> -->
          <div class="author" style="display: flex; align-items: center; text-align: left; padding: .5rem 0 .5rem .5rem;">
            <img src="<%= timelineArticle.user.image %>" alt="" style="width: 35px; height: 35px; border-radius: 50%; margin-right: .5rem;">
            <div class="time-name" style="display: flex; flex-direction: column;">
              <span style="font-size: .7rem;"><%= timelineArticle.user.displayName %> </span>
              <span style="font-size: .6rem;"><%= timelineArticle.createdAt.toLocaleDateString() %></span>
            </div>
          </div>
          
          <div class="flex flex-col justify-between p-2 leading-normal">
            <h5 class="mb-1 font-bold tracking-tight" style="font-size: 1.2rem;"><%= timelineArticle.title %></h5>
            <p class="mb-0" style="font-size: .8rem;"><%= timelineArticle.desc %>.</p>
          </div>
          <!-- <div class="article-img" style="padding: 0 .6rem 0 .6rem;">
            <img src="https://images.pexels.com/photos/325153/pexels-photo-325153.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" alt="">
          </div> -->
          <div class="post-details">
            <ul class="dark:text-white" style="display: flex; width: 80%; justify-content: space-between; margin: .2rem auto; font-size: .8rem;">
                <li>
                  <% if (user) { %>
                    
                    <span><i class="<%- (timelineArticle.likes.includes(user.id)) ? 'fas' : 'far' %> fa-thumbs-up"></i> <%= timelineArticle.likes.length %></span>
                  <%} else { %>
                    <span><i class="far fa-thumbs-up"></i> <%= timelineArticle.likes.length %></span>
                  <% } %>
                </li>
                <li>
                  <i class="far fa-comment-alt"></i> <%= timelineArticle.comments.length %>
                </li>
                <li>
                  <i class="fas fa-share-square"></i> Share
                </li>
            </ul>
